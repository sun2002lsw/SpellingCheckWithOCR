<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fakeLayoutForBoxLine2"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_edit_text"
        app:layout_constraintBottom_toTopOf="@id/saveEditedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbarSize="5dp"
        android:verticalScrollbarPosition="left"
        app:layout_constraintBottom_toTopOf="@id/saveEditedText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/largeTextViewForEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editHint"
            android:autofillHints=""
            android:gravity="top"
            android:inputType="textMultiLine" />

    </ScrollView>

    <Button
        android:id="@+id/cancelEditedText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/red"
        android:text="@string/cancel"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveEditedText"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/saveEditedText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/green"
        android:text="@string/saveText"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelEditedText" />

</androidx.constraintlayout.widget.ConstraintLayout>